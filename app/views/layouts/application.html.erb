<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <div class="page">
        <%= render 'layouts/partials/header_row' %>
        <%= render 'layouts/partials/side_nav' %>
        <%= render 'layouts/partials/page_topic' %>
    <% end %>
    <% unless current_user %>
      <%= render 'layouts/alerts' %>
    <% end %>
      <%= yield %>
    <% if current_user %>
        </div>
      </div>
    <% end %>
  </body>
</html>
