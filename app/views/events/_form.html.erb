<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <section class="forms"> 
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-body">
              <div class="form-group row">
                <strong><%= form.label :title %>: &nbsp;&nbsp;</strong>
                <%= form.text_field :title, required: true, class: "form-control form-control-success" %>
              </div>

              <div class="form-group row">
                <strong><%= form.label :event_date %>: &nbsp;&nbsp;</strong>
                <%= form.date_select :event_date, class: "form-control form-control-success" %>
              </div>

              <div class="form-group row">
                <strong><%= form.label :start_time %>: &nbsp;&nbsp;</strong>
                <%= form.time_select :start_time, class: "form-control form-control-success" %>
              </div>

              <div class="form-group row">
                <strong><%= form.label :end_time %>: &nbsp;&nbsp;</strong>
                <%= form.time_select :end_time, class: "form-control form-control-success" %>
              </div>

              <div class="form-group row">
                <strong><%= form.label :venue %>: &nbsp;&nbsp;</strong>
                <%= form.text_field :venue, required: true, class: "form-control form-control-success" %>
              </div>

              <div class="form-group row">
                <strong><%= form.label :capacity %>: &nbsp;&nbsp;</strong>
                <%= form.number_field :capacity, required: true, class: "form-control form-control-success" %>
              </div>

              <div class="form-group row">
                <%= form.submit%>
              </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>