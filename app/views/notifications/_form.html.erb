<%= form_with(model: notification, local: true) do |form| %>
  <% if notification.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(notification.errors.count, "error") %> prohibited this notification from being saved:</h2>

      <ul>
      <% notification.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <section class="forms"> 
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-body">
              <div class="form-group row">
                <strong><%= form.label :title %></strong>
                <%= form.text_field :title, class: "form-control form-control-success", required: true %>
              </div>

              <div class="form-group row">
                <strong><%= form.label :body %></strong>
                <%= form.text_area :body, class: "form-control form-control-success", required: true %>
              </div>

              <div class="form-group row">
                <% if(@notification.flyer.attached? ) %>
                  <strong><%= form.label "Change Event Flyer/Banner" %><span></strong>
                  <br/>
                  <div class="row">
                    <img src="<%= (url_for(@notification.flyer)) %>" width="100" height="50"/>
                  </div>
                <% else %>
                  <strong><%= form.label "Upload Event Flyer/Banner" %><span></strong>
                  <br/>
                <% end %>
                <%= form.file_field :flyer, class: "btn form-control form-control-success" %>
              </div>
              <br/>
              <div>
                <%= form.submit %>
              </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>