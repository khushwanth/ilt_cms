<% content_for(:title, "Club Members") %>
<% content_for(:page_title, "Users / Members") %>

<section class="tables">   
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Designation</th>
                    <th>Address</th>
                    <th>Phone</th>

                    <th colspan="3">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @users.each do |user| %>
                    <tr>
                      <td><%= user.id %></td>
                      <td><%= user.name %></td>
                      <td><%= user.email %></td>
                      <td><%= user.designation %></td>
                      <td><%= user.address %></td>
                      <td><%= user.phone %></td>
                      <td><%= link_to 'Show', user, class: "btn-primary small-button-padding" %></td>
                      <% if current_user.admin %>
                        <% if current_user.id == user.id %>
                          <td><%= link_to 'Edit', edit_user_registration_path, class: "btn-warning small-button-padding" %></td>
                          <td> </td>
                        <% else %>
                          <td><%= link_to 'Edit', edit_user_path(user), class: "btn-warning small-button-padding" %></td>
                          <td><%= link_to 'Remove', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-danger small-button-padding" %></td>
                        <% end %>
                      <% end %>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>