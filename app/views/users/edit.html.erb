<% content_for(:title, "Account Settings") %>
<% content_for(:page_title, "User Account / Settings") %>

<section class="client no-padding-top">
            <div class="container-fluid">
              <div class="row">
                <div class="col-lg-12">
                  <div class="work-amount card">
                    <div class="card-body">
                      <%= form_for(@user) do |f| %>
                      <div class="form-group row">
                        <strong><%= f.label :name %></strong><br />
                          <%= f.text_field :name, class: "from-control form-control-success"  %><br>
                      </div>
                      <div class="form-group row">
                        <strong><%= f.label :email %></strong><br />
                          <%= f.text_field :email, disabled: true, class: "from-control form-control-success" %><br>
                      </div>
                      <div class="form-group row">
                        <strong><%= f.label :address %></strong><br />
                          <%= f.text_area :address, class: "from-control form-control-success" %><br>
                      </div>
                      <div class="form-group row">
                        <strong><%= f.label :phone %></strong><br />
                          <%= f.text_field :phone, class: "from-control form-control-success"  %><br>
                      </div>
                      <div class="form-group row">
                        <strong><%= f.label :designation %></strong><br />
                        <%= f.text_field :designation, class: "from-control form-control-success"  %><br>
                      </div>
                    </div>
                    <div class="card-footer">
                        <%= f.submit "Update Profile", class: "btn btn-success" %>
                        <% end %>
                        <%= link_to "Back", :back, class: "btn btn-primary" %>
                      </div>
                    </div>  
                  </div>
                </div>
              </div>
            </div>
          </section>









